	<!-- 이메일로 회원 조회 -->
	<select id="loginSelectOne" resultType="userDTO" resultMap="user">
		SELECT * 
		FROM C_USER 
		WHERE U_EMAIL = #{u_email}
	</select>
	
	<!-- 회원가입 -->
	<insert id="insertUser">
		INSERT INTO C_USER(U_EMAIL, U_NICK, U_PW)
		VALUES(#{u_email}, #{u_nick}, #{u_pw});
	</insert>
	
	<!-- 이메일로 회원 조회 -->
    <select id="checkEmail" resultType="userDTO">
        SELECT * 
        FROM C_USER 
        WHERE U_EMAIL = #{u_email}
    </select>
    
    <!-- 닉네임으로 회원 조회 -->
    <select id="checkNick" resultType="userDTO">
        SELECT * 
        FROM C_USER 
        WHERE U_NICK = #{u_nick}
    </select>
	
	<!-- 비밀번호 찾기 -->
	<select id="pwFind" resultType="java.lang.String">
		SELECT U_EMAIL FROM C_USER WHERE U_EMAIL = #{u_email} AND U_STATUS = 1
	</select>
	
	<!-- 비밀번호 재설정 -->
	<update id="updatePw" parameterType="map">
		UPDATE C_USER SET U_PW = #{u_pw} WHERE U_EMAIL = #{u_email} AND U_STATUS = 1
	</update>
	
	
	
	
	
	
	

